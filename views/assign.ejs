<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">

  <link href="http://fonts.googleapis.com/css?family=Nunito:300,400,700" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.css">
  <!-- jQuery library -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="/css/assign.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">


  <title>ADD GROUPS </title>
  <script>
    var i = 0;

    function changeposition() {

      if (i % 2 == 0) {
        document.getElementById('table-add-group').style.top = "100px";
      } else {
        document.getElementById('table-add-group').style.top = "-1px";
      }
      i++;
    }

    window.onclick = function (event) {
      if (!event.target.matches('.hit')) {
        if (i % 2 != 0) {
          i++;
          document.getElementById('table-add-group').style.top = "-1px";

        }
      }

    }
  </script>
</head>


<body class="">

  <div class="page-wrapper-custom">

    <header class="header">
      <div class="header-wrapper">
        <div class="container">
          <div class="header-inner">
            <div class="header-logo">
              <a href="/">
                <img src="/images/wecbr.logo.png" alt="logo" width="65"
                  class="mr-3 rounded-circle img-thumbnail shadow-sm">
                <span>WECBR</span>
              </a>
            </div>
            <!-- /.header-logo -->

            <div class="header-content">
              <div class="header-bottom">
                <div class="header-action">
                  <button type="button" class="btn btn-light bg-white px-4 mb-4"><i class="fa fa-bell"></i></button>
                  <!-- /.header-action-inner -->
                </div>
                <!-- /.header-action -->
              </div>
              <!-- /.header-bottom -->
            </div>
            <!-- /.header-content -->
          </div>
          <!-- /.header-inner -->
        </div>
        <!-- /.container -->
      </div>
      <!-- /.header-wrapper -->
    </header>
    <!-- /.header -->




    <div class="main">


      <div class="container emp-profile">
        <!-- DropDown for add groups -->

        <div class="dropdown">
          <button class="btn btn-primary mb-5 float-right font-weight-bold dropdown-toggle hit"
            onclick="changeposition()" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            ADD GROUPS
          </button>

          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <form action="/createGroup" method="post">
              <input type="number" name="groupNumber" required placeholder=" Group Number" id="design-input" />
              <br>
              <input type="text" name="groupLink" required placeholder=" Group Link" id="design-input" />
              <br>
              <input type="submit" value="Submit" id="design-input-submit" />
            </form>
          </div>
        </div>
        <!--  -->

        <div class="table-responsive-md" id="table-add-group">
          <br>
          <table class="table table-striped table-hover ">
            <thead>
              <tr class="bg-primary tableheading">

                <th scope="col">S.No.</th>
                <th scope="col">Group No.</th>
                <th scope="col">Group Link</th>
                <th scope="col">Add Student Partner</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody class="main-table">
              <% for(let i = 0; i < groups.length; i++){ %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= groups[i].groupNumber %></td>
                <td><%= groups[i].groupLink %></td>
                <td>
                  <form action="/assignGroup/<%= groups[i]._id %> " method="POST">
                    <select name="users" id="">
                      <% for (let i=0; i < users.length; i++) { %>
                      <option value="<%= users[i]._id %>"> <%= users[i].fName %> </option>
                      <% } %>
                    </select>
                    <input type="submit" value="save" />
                  </form>
                <td>
                  <form action="/groups/<%= groups[i]._id %>?_method=DELETE" method="post">
                    <input type="submit" value="Delete" />
                  </form>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>


      </div>
      <!-- /.container -->
    </div>
    <!-- /.main -->

  </div>
  <!-- /.page-wrapper -->
  <script src="/js/assignScript.js"></script>
</body>

</html>