<form action="/createGroup" method="post">
  <input type="number" name="groupNumber" required placeholder="Number" />
  <input type="text" name="groupLink" required placeholder="Link" />
  <input type="submit" value="Submit" />
</form>

<table>
  <% for(let i=0; i < groups.length; i++) { %>
  <td><%= groups[i].groupNumber %></td>
  <form action="/assignGroup/<%= groups[i]._id %> " method="POST">
    <label for="Users">Users</label>
    <select name="Users" id="">
      <% for (let i=0; i < users.length; i++) { %>
      <option value="<%= users[i]._id %>"> <%= users[i].fName %> </option>
      <% } %>
    </select>
    <input type="submit" value="save" />
  </form>
  <% } %>
</table>

<table class="table table-striped table-hover">
  <thead>
    <tr class="bg-primary tableheading">
      <th scope="col">S.No</th>
      <th scope="col">Group No.</th>
      <th scope="col">Group Link</th>
      <th scope="col">Add student</th>
      <th>Students</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < groups.length; i++){ %>
    <tr class="clickable-row">
      <td><%= i + 1 %></td>
      <td><%= groups[i].groupNumber %></td>
      <td><%= groups[i].groupLink %></td>
      <td>
        <form action="/assignGroup/<%= groups[i]._id %> " method="POST">
          <select name="Users" id="">
            <% for (let i=0; i < users.length; i++) { %>
            <option value="<%= users[i]._id %>"> <%= users[i].fName %> </option>
            <% } %>
          </select>
          <input type="submit" value="save" />
        </form>
      </td>
      <% if(groups[i].users.length) { %> 
      <% for(let j=0; j<groups[i].users.length; j++) { %> 
      <td><%= groups[i].users[j].fName %></td>
      <% } %> 
      <% } else { %>
        <td>No Student</td>
      <% } %>  
      <td>
        <form
          action="/groups/<%= groups[i]._id %>?_method=DELETE"
          method="post"
        >
          <input type="submit" value="Delete" />
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
